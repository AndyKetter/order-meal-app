page{
    background-color: #F2F3F4;
    font-size: 32rpx;
    color: #303133;
}

.container{
    margin-top: 20rpx;
    background-color: #fff;
}

.item{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
    padding: 0 20rpx 0 40rpx;
    border-bottom: 1px solid #F2F3F4;
    box-sizing: border-box;
}

.item-title{
    width: 120rpx;
    color: #909399;
}

.item-content{
    flex: 1;
}

.picker{
    height: 60rpx;
    line-height: 60rpx;
}

.item-image{
    width: 40rpx;
    height: 40rpx;
}
