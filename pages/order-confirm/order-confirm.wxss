page {
    font-size: 32rpx;
    color: #303133;
    background-color: #f2f3f4;
}

.header {
    background-color: #fff;
    margin-bottom: 10px;
}

.header-user {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    padding: 0 20rpx;
}

.header-image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.name {
    flex: 1;
}

.header-address {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    height: 100rpx;
}

.address {
    flex: 1;
    padding-right: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.btn-address {
    font-size: 28rpx;
    height: 60rpx;
    width: 160rpx;
    line-height: 60rpx;
    text-align: center;
    color: white;
    background-color: #2dd089;
    border-radius: 30rpx;
}

.order-content {
    background-color: #fff;
    margin-bottom: 20rpx;
    font-size: 30rpx;
}

.order-date-meal {
    font-size: 32rpx;
    height: 100rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
    border-bottom: 1px solid #f2f3f4;
    box-sizing: border-box;
}

.order-meal-subtotal {
    flex: 1;
    display: inline-block;
    text-align: right;
    color: #2dd089;
}

.order-detail {
    padding: 0 20rpx 20rpx;
    display: flex;
    justify-content: flex-start;
}

.detail-goods-image image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 0 10rpx 0 10rpx;
}

.info-goods-name {
    flex: 1;
}

.info-price-group {
    height: 50rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.current_price {
    margin-right: 10rpx;
}

.original_price {
    font-size: 26rpx;
    text-decoration: line-through;
    color: #8a8a8a;
    margin-right: 10rpx;
}

.order-count {
    margin-left: 10rpx;
}

.goods-subtotal{
    flex: 1;
    text-align: right;
    font-size: 32rpx;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 180rpx;
    border-top: 1px solid #f2f3f4;
    box-sizing: border-box;
}

.footer-total {
    padding: 0 20rpx;
    background-color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}

.footer-total > text {
    color: #2dd089;
    font-size: 36rpx;
    margin: 0 10rpx;
}

.w-100{
    display: inline-block;
    width: 100rpx;
}

.footer-button {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
}

.radio-group {
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 20rpx;
    color: #fff;
    background-color: #323232;
}

.radio-item:first-of-type {
    margin-right: 60rpx;
}

.footer-button-pay {
    color: #fff;
    font-size: 36rpx;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #2dd089;
}
