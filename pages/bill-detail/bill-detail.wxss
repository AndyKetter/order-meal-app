page {
    font-size: 30rpx;
    color: #303133;
    background-color: #F2F3F4;
}

.header {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.header-user {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    padding: 0 20rpx;
}

.image-ico {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.name {
    flex: 1;
}

.order-content{
    background-color: #fff;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
}

.order-date-meal {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 80rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid #F2F3F4;
    box-sizing: border-box;
}

.order-meal-subtotal{
    flex: 1;
    display: inline-block;
    text-align: right;
    color: #2DD089;
    font-size: 32rpx;
}

.order-detail {   
    padding: 15rpx 10rpx 5rpx 20rpx;
    display: flex;
    justify-content: flex-start;
    font-size: 28rpx;
}

.detail-goods-image image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.goods-info{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 0 10rpx 0 20rpx;
}

.info-goods-name{
    flex: 1;
}

.info-price-group{
    height: 50rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.current_price{
    padding-right: 10rpx;

}

.original_price{
    font-size: 26rpx;
    text-decoration:line-through;
    color: #8a8a8a;
    padding-right: 10rpx;
}

.order-count{
    padding: 0 10rpx
}

.goods-subtotal{
    flex: 1;
    text-align: right;
    font-size: 30rpx;
}

.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #E4E7ED;
    box-sizing: border-box;
}

.footer-total{
    background-color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    text-align: right;
    padding-right: 10rpx;
}

.footer-total > text{
    color: #2DD089;
    font-size: 36rpx;
    margin: 0 10rpx;
}

.w-100{
    display: inline-block;
    width: 100rpx;
}
