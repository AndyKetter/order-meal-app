page {
}

.warper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    position: absolute;
}

.gaoshi-beidi {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}

.content {
    width: 650rpx;
    height: 600rpx;
    background-color: rgb(255, 255, 255, 1);
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.title {
    color: #4d4e4f;
    font-size: 36rpx;
    margin-bottom: 60rpx;
}

.placeholder {
    color: #c4c5c6;
}

.input-view {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 80rpx;
    width: 80%;
    border: 1px solid #dddedf;
    border-radius: 80rpx;
    margin-bottom: 40rpx;
    padding: 0 40rpx;
}

.input {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
}

.password-image {
    width: 50rpx;
    height: 40rpx;
    margin: 10rpx 0 0 10rpx;
}

.button-view {
    width: 100%;
    margin-bottom: 40rpx;
}

.button-view .button-ok {
    width: 90%;
    background-color: #2bd28a;
    color: #fff;
    border: none;
    border-radius: 80rpx;
}

.other {
    width: 80%;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    color: #4d4e4f;
}
