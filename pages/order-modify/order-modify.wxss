page {
    font-size: 30rpx;
    color: #303133;
    background-color: #f2f3f4;
}

.header {
    margin: 20rpx 0;
    background-color: #fff;
}

.header-user {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    padding: 0 20rpx;
}

.image-ico {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.name {
    flex: 1;
}

.header-address {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    padding: 0 20rpx;
}

.header-content-address {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.address {
    flex: 1;
    font-size: 30rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.btn-address {
    font-size: 26rpx;
    height: 60rpx;
    width: 150rpx;
    line-height: 60rpx;
    text-align: center;
    color: white;
    background-color: #2dd089;
    border-radius: 30rpx;
    margin-left: 20rpx;
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
}

.order-number {
    flex: 1;
}

.order-time{
    width: 300rpx;
}

.order-payment-type{
    width: 120rpx;
    text-align: right;
}

.order-content {
    background-color: #fff;
    margin-bottom: 20rpx;
    font-size: 30rpx;
}

.order-date-meal {
    height: 80rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 20rpx;
}

.order-meal-subtotal {
    flex: 1;
    display: inline-block;
    text-align: right;
}

.order-detail {
    display: flex;
    justify-content: flex-start;
    background-color: #F9F9F9;
    padding: 20rpx;
}

.detail-goods-image image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.goods-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 20rpx;
}

.info-goods-name {
    flex: 1;
}

.info-other-group {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-bottom: 6rpx;
}

.other-group-price {
    flex: 1;
}

.current_price {
    margin-right: 5rpx;
}

.original_price {
    font-size: 24rpx;
    text-decoration: line-through;
    color: #8a8a8a;
}

.refund-button {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.refund-title {
    font-size: 26rpx;
    color: #2dd089;
    margin-right: 10rpx;
}

.button {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 32rpx;
    /* font-weight: bold; */
    border: 1px solid #DCDFE6; 
    box-sizing: border-box;
}

.button-minus {
    border-right: none;
    border-radius: 10rpx 0 0 10rpx;
}

.button-plus {
    border-left: none;
    border-radius: 0 10rpx 10rpx 0;
}

.refund-count {
    width: 100rpx;
    height: 60rpx;
    font-size: 32rpx;
    line-height: 60rpx;
    text-align: center;
    border: 1px solid #DCDFE6;
    box-sizing: border-box;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #F2F3F4;
    padding: 20rpx;
}

.footer .footer-button-pay {
    width: 95%;
    color: #fff;
    font-size: 36rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #2dd089;
    border-radius: 40rpx;
}
