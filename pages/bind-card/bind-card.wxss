page{
    font-size: 32rpx;
    color:  #303133;
    background-color: #f2f3f4;
}

.item{
    margin: 20rpx 0;
    padding: 0 20rpx;
    background-color: #fff;
}

.item-header{
    height: 100rpx;
    line-height: 100rpx;
    color: #909399;
    font-size: 30rpx;
}

.item-header > text{
    color: #303133;
    font-size: 32rpx;
    display: inline-block;
    width: 130rpx;
}

.item-content{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
}

.radio-group{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
}

.radio-group > view{
    width: 100rpx;
}

/* 自定义样式.... */
.radio-group__radio .wx-radio-input{ 
    height: 40rpx; 
    width: 40rpx;
    margin-top: -6rpx;
    border-radius: 50%;
    border: 1px solid #acacac;
    background: transparent;
 }
 
/* 选中后的对勾样式 （白色对勾） */
.radio-group__radio .wx-radio-input .wx-radio-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: #01B269;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.item .input{
    flex: 1;
    padding: 0 20rpx 0 130rpx;
}

.placeholder-class{
    color: #303133;
    font-size: 28rpx;
}

.item-content-button{
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin-right: 20rpx;
    color: #fff;
    background-color: #2DD089;
    border-radius: 30rpx;
    font-size: 28rpx;
}

.button-group{
    margin-top: 40rpx;
}

.button-group .button-ok{
    width: 95%;
    color: #fff;
    background-color: #2DD089;
    border-radius: 20px;
}
